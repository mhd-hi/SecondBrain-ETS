{
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "eslint.nodePath": "./node_modules/eslint",
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "html",
    "markdown",
    "yaml",
    "css",
    "pcss",
    "postcss",
    "github-actions-workflow"
  ],
  "search.exclude": {
    "yarn.lock": true
  },
  "debug.toolBarLocation": "hidden", // helps with running the dev script without the debug toolbar
  "files.insertFinalNewline": true
}
