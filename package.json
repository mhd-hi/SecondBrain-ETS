{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "second-brain",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.2.10",
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "build": "bun run db:deploy && next build",
    "check": "next lint && tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:deploy": "bun run db:generate && bun run db:migrate",
    "db:seed": "bun run src/server/db/seed.ts",
    "db:reset": "bun run db:generate && bun run db:push --force && bun run db:seed",
    "dev": "next dev --turbo",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "lint": "next lint",
    "lint:strict": "eslint ./src --max-warnings 1",
    "lint:fix": "eslint . --fix",
    "preview": "bun run build && next start",
    "start": "next start",
    "typecheck": "tsc --noEmit --pretty",
    "clean": "rm -rf .next node_modules bun.lock",
    "fresh-install": "bun run clean && bun install",
    "update": "bun update",
    "deploy:check": "bun run typecheck && bun run lint && bun run db:deploy"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.9.1",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@shadcn/ui": "^0.0.4",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@vercel/analytics": "^1.5.0",
    "cheerio": "^1.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.41.0",
    "lucide-react": "^0.512.0",
    "next": "^15.3.3",
    "next-auth": "5.0.0-beta.25",
    "next-themes": "^0.4.6",
    "openai": "^5.3.0",
    "postgres": "^3.4.7",
    "react": "^19.1.0",
    "react-day-picker": "8.10.1",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.57.0",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.62",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.12.0",
    "@eslint-react/eslint-plugin": "^1.52.1",
    "@eslint/eslintrc": "^3.3.1",
    "@next/eslint-plugin-next": "^15.3.3",
    "@stylistic/eslint-plugin": "4.2.0",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/node": "^20.19.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@typescript-eslint/utils": "^8.34.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.28.0",
    "eslint-config-next": "^15.3.3",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-format": "1.0.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-testing-library": "^7.5.2",
    "postcss": "^8.5.5",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwindcss": "^4.1.10",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "ct3aMetadata": {
    "initVersion": "7.39.3"
  },
    "overrides": {
    "brace-expansion": "4.0.1",
    "esbuild": "0.25.5"
  }
}
