{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "second-brain",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.6",
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "build": "next build",
    "preview": "bun run build && next start",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:deploy": "bun run db:generate && bun run db:migrate",
    "db:seed": "bun run src/server/db/seed.ts",
    "db:reset": "bun run db:generate && bun run db:push --force && bun run db:seed",
    "dev": "next dev --turbo",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "lint": "eslint",
    "lint:strict": "eslint ./src --max-warnings 1",
    "lint:fix": "eslint --fix",
    "start": "next start",
    "check:unused": "knip-bun",
    "typecheck": "tsc --noEmit --pretty",
    "clean": "rm -rf .next node_modules bun.lock",
    "fresh-install": "bun run clean && bun install",
    "update": "bun update",
    "deploy:check": "bun run typecheck && bun run lint && bun run db:deploy",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.11.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/nextjs": "^10.32.0",
    "@sentry/profiling-node": "^10.32.0",
    "@t3-oss/env-nextjs": "^0.12.0",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.41.0",
    "howler": "^2.2.4",
    "knip": "^5.75.2",
    "lucide-react": "^0.525.0",
    "next": "^15.5.9",
    "next-auth": "5.0.0-beta.30",
    "next-themes": "^0.4.6",
    "openai": "^5.23.2",
    "postgres": "^3.4.7",
    "react": "^19.2.3",
    "react-day-picker": "8.10.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.2.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@antfu/eslint-config": "4.12.0",
    "@eslint-react/eslint-plugin": "^1.53.1",
    "@eslint/eslintrc": "^3.3.3",
    "@next/eslint-plugin-next": "^15.5.9",
    "@stylistic/eslint-plugin": "5.3.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@types/howler": "^2.2.12",
    "@types/node": "^20.19.27",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@typescript-eslint/utils": "^8.50.0",
    "@vitest/ui": "^4.0.16",
    "baseline-browser-mapping": "^2.9.15",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-next": "^15.5.9",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-format": "1.0.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-testing-library": "^7.15.1",
    "happy-dom": "^20.0.11",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  },
  "ct3aMetadata": {
    "initVersion": "7.39.3"
  },
  "overrides": {
    "@eslint/plugin-kit": "0.3.5",
    "brace-expansion": "1.1.12",
    "esbuild": "0.25.5",
    "js-yaml": "4.1.1"
  }
}
